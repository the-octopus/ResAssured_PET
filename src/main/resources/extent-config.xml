<extentreports>
    <configuration>
        <!-- report theme -->
        <!-- standard, dark -->
        <theme>standard</theme>

        <!-- document encoding -->
        <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- protocol for script and stylesheets -->
        <!-- defaults to https -->
        <protocol>http</protocol>

        <!-- title of the document -->
        <documentTitle>Test Summary Report</documentTitle>

        <!-- report name - displayed at top-nav -->
        <reportName>

            PET Test Example


        </reportName>

        <!-- report headline - displayed at top-nav, after reportHeadline -->
        <reportHeadline></reportHeadline>

        <!-- global date format override -->
        <!-- defaults to yyyy-MM-dd -->
        <dateFormat>yyyy-MM-dd</dateFormat>

        <!-- global time format override -->
        <!-- defaults to HH:mm:ss -->
        <timeFormat>HH:mm:ss</timeFormat>

        <!-- custom javascript -->
        <styles>
            <![CDATA[
                .report-name { padding-left: 10px; } .report-name > img { float: left;height: 90%;margin-left: 30px;margin-top: 2px;margin-top: 2px;width: auto; }
            ]]>
        </styles>
        <!-- custom javascript --> <scripts> <![CDATA[ $(document).ready(function() { $(".logo-content").hide(); $(".logo-container").html("Test Summary"); }); ]]> </scripts>
        <!-- custom styles -->

    </configuration>
</extentreports>
